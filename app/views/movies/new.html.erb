-->

<%= form_with(model: @movie, data: { turbo: false }) do |form| %>
  <div>

    <%= form.label :title %>
    <%= form.text_field :title %>


  </div>

  <div>

    <%= form.label :description %>
    <%= form.text_area :description, { rows: 3 } %>

  </div>

<%= button_tag "Create Movie" %> 
<% end %>
<% end %>
